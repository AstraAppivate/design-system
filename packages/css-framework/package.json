{
  "name": "@royalnavy/css-framework",
  "description": "Design Tokens for Royal Navy components and applications.",
  "version": "2.11.1-alpha.3",
  "publishConfig": {
    "access": "public"
  },
  "author": "Royal Navy",
  "contributors": [
    "hxltrhuxze <hxltrhuxze@royalnavy.io> (royalnavy.io)",
    "antictor <antictor@royalnavy.io> (royalnavy.io)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Royal-Navy/design-system.git",
    "directory": "packages/css-framework"
  },
  "homepage": "https://github.com/Royal-Navy/design-system/tree/develop/packages/css-framework#readme",
  "license": "MIT",
  "main": "index.scss",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn build-tokens && yarn build-main && yarn build-base && yarn build-utilities && yarn build-clearfix && yarn build-flex && yarn build-position && yarn build-shadows && yarn build-sizing && yarn build-spacing && yarn build-typography && yarn build-visibility",
    "build-tokens": "style-dictionary build",
    "build-main": "sass --style=compressed index.scss dist/styles.css",
    "build-base": "sass --style=compressed entrypoints/base.scss dist/base.css",
    "build-utilities": "sass --style=compressed entrypoints/utilities.scss dist/utilities.css",
    "build-clearfix": "sass --style=compressed src/utilities/_clearfix.scss dist/clearfix.css",
    "build-flex": "sass --style=compressed src/utilities/_flex.scss dist/flex.css",
    "build-position": "sass --style=compressed src/utilities/_position.scss dist/position.css",
    "build-shadows": "sass --style=compressed src/utilities/_shadows.scss dist/shadows.css",
    "build-sizing": "sass --style=compressed src/utilities/_sizing.scss dist/sizing.css",
    "build-spacing": "sass --style=compressed src/utilities/_spacing.scss dist/spacing.css",
    "build-typography": "sass --style=compressed src/utilities/_typography.scss dist/typography.css",
    "build-visibility": "sass --style=compressed src/utilities/_visibility.scss dist/visibility.css",
    "lint": "stylelint ./index.scss",
    "lint-staged": "lint-staged",
    "watch": "sass --watch index.scss dist/styles.css",
    "prepare": "yarn build"
  },
  "lint-staged": {
    "*.@(scss)": "stylelint"
  },
  "devDependencies": {
    "lint-staged": "^9.5.0",
    "sass": "^1.25.0",
    "style-dictionary": "^2.10.1",
    "stylelint": "^13.0.0",
    "stylelint-junit-formatter": "^0.2.2"
  }
}
