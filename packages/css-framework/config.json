{
  "source": ["src/tokens/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "src/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/map-deep",
        "mapName": "tokens"
      }]
    },
    "js": {
      "transforms": ["name/cti/constant"],
      "buildPath": "dist/",
      "files": [{
        "format": "javascript/es6",
        "destination": "constants.js"
      }]
    }
  }
}
