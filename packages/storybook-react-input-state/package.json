{
  "name": "@royalnavy/storybook-react-input-state",
  "description": "State wrapper for form components in react storybook stories",
  "version": "1.3.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/bundle.js",
  "keywords": [
    "storybook",
    "addon",
    "react",
    "state"
  ],
  "author": "NELSON",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Royal-Navy/nelson-frontend-component-library.git"
  },
  "homepage": "https://github.com/Royal-Navy/nelson-frontend-component-library",
  "bugs": {
    "url": "https://github.com/Royal-Navy/nelson-frontend-component-library/issues"
  },
  "scripts": {
    "build": "webpack --config webpack/webpack.prod.js",
    "build-storybook": "build-storybook",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "postinstall": "yarn build",
    "storybook": "start-storybook -p 6006",
    "release": "release-it",
    "test": "jest --silent --no-cache",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/react": "^5.1.11",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-junit": "^1.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.15",
    "npm-check": "^5.9.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "release-it": "^12.3.6",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-merge": "^4.2.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/label-has-associated-control": 0,
      "react/destructuring-assignment": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "react/jsx-one-expression-per-line": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack/webpack.dev.js"
        }
      }
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.@(js)": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./tests/setup-tests.js"
    ],
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ]
  }
}
